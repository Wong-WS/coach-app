rules_version = '2';
service cloud.firestore {
  match /databases/{database}/documents {
    // Coach slugs - public read, authenticated create (own uid only)
    match /coachSlugs/{slug} {
      allow read: if true;
      allow create: if request.auth != null
        && request.resource.data.coachId == request.auth.uid;
      allow update, delete: if false; // Slugs cannot be changed once created
    }

    // Coach profiles - public read, owner write
    match /coaches/{coachId} {
      allow read: if true;
      allow create: if request.auth != null && request.auth.uid == coachId;
      allow update: if request.auth != null && request.auth.uid == coachId;
      allow delete: if request.auth != null && request.auth.uid == coachId;

      // Working hours - public read, owner write
      match /workingHours/{day} {
        allow read: if true;
        allow write: if request.auth != null && request.auth.uid == coachId;
      }

      // Locations - public read, owner write
      match /locations/{locationId} {
        allow read: if true;
        allow write: if request.auth != null && request.auth.uid == coachId;
      }

      // Bookings - public read (for availability engine), owner create/update/delete
      match /bookings/{bookingId} {
        allow read: if true;
        allow write: if request.auth != null && request.auth.uid == coachId;
      }

      // Waitlist - public read + create (clients can join), owner update/delete
      match /waitlist/{waitlistId} {
        allow read: if true;
        allow create: if true;
        allow update, delete: if request.auth != null && request.auth.uid == coachId;
      }
    }
  }
}
